CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
RM = rm -f
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all:
	$(CC) $(CFLAGS) $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all $(OBJ)

.PHONY : all clean oclean fclean re CFLAGS